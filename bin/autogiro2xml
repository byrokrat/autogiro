declare(strict_types = 1);

namespace byrokrat\autogiro;

require __DIR__ . '/../vendor/autoload.php';

$source = $argv[1] ?? 'php://stdin';

$parser = (new Parser\ParserFactory)->createParser(
    Parser\ParserFactory::VISITOR_IGNORE_STRICT_VALIDATION
);

$xmlWriter = (new Xml\XmlWriterFactory)->createXmlWriter();

try {
    echo $xmlWriter->asXml(
        $parser->parse(file_get_contents($source))
    );
} catch (Exception $e) {
    fwrite(STDERR, $e->getMessage()."\n");
    exit(1);
}
